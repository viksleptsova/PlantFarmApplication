<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/plantImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:elevation="5dp"
        android:src="@drawable/plant8"
        app:layout_constraintBottom_toBottomOf="@id/plantImageView"
        app:layout_constraintStart_toStartOf="@+id/plantImageView"
        app:layout_constraintTop_toTopOf="@+id/plantImageView" />

    <ImageView
        android:id="@+id/plantImageView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/plants_events_rec"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/plantImageView"
        app:layout_constraintEnd_toEndOf="@+id/plantImageView"
        app:layout_constraintTop_toTopOf="@+id/plantImageView" />

    <TextView
        android:id="@+id/plantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Черемуха Виргинская"
        android:textSize="16sp"
        android:fontFamily="@font/open_sans_semibold"
        app:layout_constraintStart_toEndOf="@id/plantImage"
        app:layout_constraintTop_toTopOf="@id/plantImageView"
        app:layout_constraintBottom_toTopOf="@id/latinPlantName"/>

    <TextView
        android:id="@+id/latinPlantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="12sp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Prunus virginiana"
        app:layout_constraintTop_toBottomOf="@id/plantName"
        app:layout_constraintStart_toEndOf="@id/plantImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>